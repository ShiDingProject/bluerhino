/* pages/search/search.wxss */
.search{
  position: relative;
  border-top:1px solid #f1f1f1;
  padding-top: 10rpx;
  height: 100%;
  box-sizing: border-box;
}
/* 搜索页面 搜索 文章列表 */
.search-detailList{
  padding-top: 20rpx;
}
.list-type0,.list-type1,.list-type2,.list-type3{
  width: 90%;
  padding: 0rpx 5%;
  position: relative;
}
.list-type0 .title,.list-type1 .title,.list-type2 .title,.list-type3 .title{
  font-family: PingFang-SC-Medium;
	font-size: 34rpx;
	line-height: 54rpx;
	color: #333333;
  box-sizing: border-box;
}
.list-type2 .title{
  padding-left: 230rpx;
  min-height: 150rpx;
}
.list-type0 .image{
  height: 150rpx;
  margin-top: 10rpx;
}
.list-type1 .image{
  height: 300rpx;
  margin-top: 10rpx;
}
.list-type2 .image{
  width: 220rpx;
  height: 150rpx;
  position: absolute;
  left: 5%;
  top: 0rpx;
}
.list-type0 .image image{
  display: block;
  float: left;
  width: 220rpx;
  height: 150rpx;
  margin: 0rpx 2rpx;
}
.list-type1 .image image{
  display: block;
  float: left;
  width: 670rpx;
  height: 300rpx;
}
.list-type2 .image image{
  display: block;
  float: left;
  width: 220rpx;
  height: 150rpx;
}
.date-agree{
  border-bottom: 1rpx solid #f1f1f1;
  padding-bottom: 10rpx;
  margin-bottom: 32rpx;
}
.date-agree .type{
  font-family: PingFang-SC-Medium;
	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 30rpx;
  height: 30rpx;
	color: #ff3d34;
  border-radius: 6rpx;
	border: solid 1px #ff3d34;
  padding:0rpx 20rpx;
  float: left;
  margin-top: 16rpx;
  margin-right: 20rpx;
}
.date-agree .date{
  float: left;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	color: #c0c0c0;
  line-height: 66rpx;
}
.date-agree .agree{
  float: right;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	color: #c0c0c0;
  line-height: 66rpx;
}
.date-agree .agree image{
  display: inline-block;
  width: 22rpx;
	height: 22rpx;
  margin-right: 8rpx;
}
.list_Loading{
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #9e9e9e;
  text-align: center;
  width: 90%;
  padding: 0rpx 5%;
  line-height: 32rpx;
  margin-bottom: 32rpx;
}
.detailList-null{
  width: 100%;
  padding: 0rpx 5%;
  height: 100%;
  position: relative;
  text-align: center;
  padding-top: 480rpx;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #646464;
}
.detailList-null image{
  width: 163rpx;
  height: 210rpx;
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  top: 260rpx;
  margin: auto;
}