/* pages/search/search.wxss */
.search{
  position: relative;
  padding-top: 74rpx;
  height: 100%;
  box-sizing: border-box;
}
.search .title{
  font-family: PingFang-SC-Bold;
	font-size: 32rpx;
	color: #1a1a1a;
  line-height: 100rpx;
}
.search-form{
  width: 90%;
  padding: 0rpx 5%;
  height: 60rpx;
  padding-bottom: 13rpx;
  border-bottom: 1px solid #f1f1f1;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  z-index: 10;
}
.search-input{
  width: 599rpx;
  position: relative;
  float: left;
}
.search-input .input{
  width: 599rpx;
	height: 60rpx;
	background-color: #f3f4f6;
	border-radius: 30rpx;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
  line-height: 60rpx;
  padding: 0rpx 66rpx;
  box-sizing: border-box;
  outline: none;
  border:1px solid #f3f4f6;
}
.search-input .img{
  width: 26rpx;
	height: 26rpx;
  position: absolute;
  top: 17rpx;
  left: 28rpx;
}
.search-giveup{
  float: right;
  font-family: PingFang-SC-Bold;
	font-size: 32rpx;
	color: #f2a43a;
  line-height: 62rpx;
  background: #fff;
}
/* 搜索页面 首页 */
.search-tag{
  width: 90%;
  padding: 0rpx 5%;
  padding-bottom: 6rpx;
  border-bottom: 20rpx solid #f4f4f4;
}
.search-tag .btn-box{
  padding-top: 28rpx;
}
.search-tag .btn-box .btn{
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #444444;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #f6f6f6;
	border-radius: 32rpx;
  padding: 0rpx 32rpx;
  float: left;
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}
.search-history .title{
  width: 90%;
  padding: 0rpx 5%;
}
.search-history .list{
  width: 90%;
  padding: 0rpx 5%;
  height: 86rpx;
  line-height: 86rpx;
  border-bottom: 1px solid #f1f1f1;
  position: relative;
}
.search-history .list .list-tap{
  position: relative;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #646464;
  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 100rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.search-history .list .list-tap image{
  display: block;
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  left: 0rpx;
  top: 30rpx;
}
.search-history .list .list-del{
  position: relative;
  height: 86rpx;
  width: 86rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.search-history .list .list-del image{
  display: block;
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  left: 32rpx;
  top: 32rpx;
}
.search-history .del-listAll{
  width: 90%;
  padding: 0rpx 5%;
  height: 86rpx;
  line-height: 86rpx;
  border-bottom: 1px solid #f1f1f1;
  text-align: center;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #646464;
}
/* 搜索页面 输入框有内容 —— 即将搜索 */
.search-before{
  width: 90%;
  padding: 0rpx 5%;
  line-height: 86rpx;
  border-bottom: 1px solid #f1f1f1;
  text-align: center;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #4083e9;
}
/* 搜索页面 搜索 文章列表 */
.search-detailList{
  padding-top: 20rpx;
}
.list-type0,.list-type1,.list-type2,.list-type3{
  width: 90%;
  padding: 0rpx 5%;
  position: relative;
}
.list-type0 .title,.list-type1 .title,.list-type2 .title,.list-type3 .title{
  font-family: PingFang-SC-Medium;
	font-size: 34rpx;
	line-height: 54rpx;
	color: #333333;
  box-sizing: border-box;
}
.list-type2 .title{
  padding-left: 230rpx;
  min-height: 150rpx;
}
.list-type0 .image{
  height: 150rpx;
  margin-top: 10rpx;
}
.list-type1 .image{
  height: 300rpx;
  margin-top: 10rpx;
}
.list-type2 .image{
  width: 220rpx;
  height: 150rpx;
  position: absolute;
  left: 5%;
  top: 0rpx;
}
.list-type0 .image image{
  display: block;
  float: left;
  width: 220rpx;
  height: 150rpx;
  margin: 0rpx 2rpx;
}
.list-type1 .image image{
  display: block;
  float: left;
  width: 670rpx;
  height: 300rpx;
}
.list-type2 .image image{
  display: block;
  float: left;
  width: 220rpx;
  height: 150rpx;
}
.date-agree{
  border-bottom: 1rpx solid #f1f1f1;
  padding-bottom: 10rpx;
  margin-bottom: 32rpx;
}
.date-agree .type{
  font-family: PingFang-SC-Medium;
	font-size: 22rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 30rpx;
  height: 30rpx;
	color: #ff3d34;
  border-radius: 6rpx;
	border: solid 1px #ff3d34;
  padding:0rpx 20rpx;
  float: left;
  margin-top: 16rpx;
  margin-right: 20rpx;
}
.date-agree .date{
  float: left;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	color: #c0c0c0;
  line-height: 66rpx;
}
.date-agree .agree{
  float: right;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	color: #c0c0c0;
  line-height: 66rpx;
}
.date-agree .agree image{
  display: inline-block;
  width: 22rpx;
	height: 22rpx;
  margin-right: 8rpx;
}
.list_Loading{
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #9e9e9e;
  text-align: center;
  width: 90%;
  padding: 0rpx 5%;
  line-height: 32rpx;
  margin-bottom: 32rpx;
}
.detailList-null{
  width: 100%;
  padding: 0rpx 5%;
  height: 100%;
  position: relative;
  text-align: center;
  padding-top: 480rpx;
  box-sizing: border-box;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #646464;
}
.detailList-null image{
  width: 163rpx;
  height: 210rpx;
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  top: 260rpx;
  margin: auto;
}